<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nome_do_evento"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="16sp"
            tools:text="Show da Banda X" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="14sp"
            tools:text="Local: Teatro Municipal" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555"
            android:textSize="13sp"
            tools:text="20:00h" />
    </LinearLayout>

    <!-- ðŸ”¸ Setinha para ir aos detalhes -->
    <ImageView
        android:id="@+id/iconeSeta"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/seta_direita_chevron"
        android:contentDescription="@string/ver_detalhes"
        app:tint="#000" />
</LinearLayout>
