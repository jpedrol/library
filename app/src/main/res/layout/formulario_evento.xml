<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2196F3">

    <!-- ðŸ”¹ CabeÃ§alho -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:backgroundTint="#FFFFFF">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageButton
                android:id="@+id/botao_voltar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/seta_esquerda_chevron"
                android:contentDescription="@string/voltar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CRIAR EVENTO"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- ðŸ”¹ FormulÃ¡rio -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        android:backgroundTint="#FFFFFF">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Layout com imagem Ã  direita -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Campos do formulÃ¡rio Ã  esquerda -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="12dp">

                        <!-- Campo Nome -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nome"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp" />

                        <EditText
                            android:id="@+id/etNome"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/background_edit_text"
                            android:padding="12dp"
                            android:hint=""
                            android:textSize="13sp"
                            android:layout_marginBottom="12dp" />

                        <!-- Campo Tipo -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp" />

                        <Spinner
                            android:id="@+id/spinnerTipo"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/background_edit_text"
                            android:padding="12dp"
                            android:layout_marginBottom="12dp" />

                        <!-- Campo Local -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Local"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp" />

                        <EditText
                            android:id="@+id/etLocal"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/background_edit_text"
                            android:padding="12dp"
                            android:hint=""
                            android:textSize="13sp"
                            android:layout_marginBottom="12dp" />

                        <!-- Campo Data e Hora -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data e Hora"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp" />

                        <EditText
                            android:id="@+id/etDataHora"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/background_edit_text"
                            android:padding="12dp"
                            android:hint="DD/MM/YYYY HH:MM"
                            android:textSize="13sp"
                            android:focusable="false"
                            android:clickable="true"
                            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                            android:layout_marginBottom="12dp" />

                    </LinearLayout>

                    <!-- Ãrea de Imagem Ã  direita -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="160dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:id="@+id/layoutAdicionarImagem"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#E3F2FD"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:id="@+id/ivImagemEvento"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:visibility="gone"
                                android:contentDescription="@string/imagem_evento" />

                            <LinearLayout
                                android:id="@+id/layoutPlaceholder"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+"
                                    android:textColor="#2196F3"
                                    android:textSize="48sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ADICIONAR\nIMAGEM"
                                    android:textAlignment="center"
                                    android:textColor="#2196F3"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="8dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Checkbox Convidados -->
                <CheckBox
                    android:id="@+id/checkboxConvidados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Convidados?"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Container de Convidados (inicialmente vazio) -->
                <LinearLayout
                    android:id="@+id/containerConvidados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <!-- Os cards de convidados serÃ£o adicionados aqui dinamicamente -->
                </LinearLayout>

                <!-- Card de Convidado (Template - serÃ¡ clonado dinamicamente) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardConvidadoTemplate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Header com tÃ­tulo e botÃ£o remover -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:id="@+id/tvConvidadoNumero"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Convidado 1"
                                android:textColor="#000000"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/btnRemoverConvidado"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/ic_close_circle"
                                android:contentDescription="Remover convidado" />
                        </LinearLayout>

                        <!-- Campo Nome do Convidado -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nome"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/etNomeConvidado"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/background_edit_text"
                            android:padding="10dp"
                            android:hint=""
                            android:textSize="12sp"
                            android:layout_marginBottom="8dp" />

                        <!-- Campo DescriÃ§Ã£o do Convidado -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DescriÃ§Ã£o"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/etDescricaoConvidado"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/background_edit_text"
                            android:padding="10dp"
                            android:hint=""
                            android:textSize="12sp"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:maxLines="4" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- BotÃ£o Adicionar Convidado -->
                <Button
                    android:id="@+id/btnAdicionarConvidado"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/background_add_button"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_marginBottom="20dp" />

                <!-- BotÃ£o Criar Evento -->
                <Button
                    android:id="@+id/btnCriarEvento"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Criar Evento"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:background="@drawable/background_button_primary"
                    android:backgroundTint="#2196F3"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>