<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/eventosTelaMensalFragment">

    <!-- ðŸ”¹ Fragment do calendÃ¡rio mensal (tela inicial de eventos) -->
    <fragment
        android:id="@+id/eventosMesFragment"
        android:name="com.example.desmovel.EventosMesFragment"
        android:label="Eventos"
        tools:layout="@layout/eventos_tela_mensal">

        <!-- AÃ§Ã£o para navegar para a tela diÃ¡ria -->
        <action
            android:id="@+id/action_eventosMesFragment_to_eventosTelaDiariaFragment"
            app:destination="@id/eventosTelaDiariaFragment" />
    </fragment>

    <!-- ðŸ”¹ Fragment da tela diÃ¡ria (eventos do dia selecionado) -->
    <fragment
        android:id="@+id/eventosTelaDiariaFragment"
        android:name="com.example.desmovel.EventosTelaDiariaFragment"
        android:label="Eventos do Dia"
        tools:layout="@layout/eventos_tela_diaria">

        <!-- Argumentos que serÃ£o passados -->
        <argument
            android:name="diaSelecionado"
            app:argType="integer"
            android:defaultValue="1" />
        <argument
            android:name="mesSelecionado"
            app:argType="integer"
            android:defaultValue="1" />
        <argument
            android:name="anoSelecionado"
            app:argType="integer"
            android:defaultValue="2025" />

        <!-- AÃ§Ã£o para navegar para detalhes do evento -->
        <action
            android:id="@+id/action_diaria_to_detalhes"
            app:destination="@id/detalhesEventoFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <!-- ðŸ”¹ Fragment de detalhes do evento (ao clicar na seta) -->
    <fragment
        android:id="@+id/detalhesEventoFragment"
        android:name="com.example.desmovel.DetalhesEventoFragment"
        android:label="Detalhes do Evento"
        tools:layout="@layout/detalhes_evento">

        <!-- ID do evento selecionado -->
        <argument
            android:name="eventoId"
            app:argType="integer" />
    </fragment>

</navigation>