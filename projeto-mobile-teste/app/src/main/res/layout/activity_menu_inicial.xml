<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".MenuInicialActivity">

    <!-- PAI sem padding para a topBar encostar nas bordas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- ===================== TOPO ===================== -->
        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_topbar_arredondado"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:background="@null"
                app:srcCompat="@drawable/ic_menu"
                android:contentDescription="Menu"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="4dp" />

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:background="@null"
                app:srcCompat="@drawable/ic_search"
                android:contentDescription="Pesquisar"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="4dp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- ===== CHIP PRETO: RECOMENDADOS ===== -->
            <LinearLayout
                android:id="@+id/headerRecomendados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_preto_arredondado"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recomendados:"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Cartão branco arredondado para o carrossel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_section_card"
                android:orientation="vertical">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpRecomendados"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <!-- Linha da pílula + chatbot (mesma linha) -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <!-- Pílula preta centralizada -->
                    <LinearLayout
                        android:id="@+id/pillDots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_indicador_arredondado"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabDots"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:tabIndicatorHeight="0dp"
                            app:tabIndicator="@null"
                            app:tabSelectedTextColor="@android:color/transparent"
                            app:tabTextColor="@android:color/transparent"
                            android:paddingEnd="8dp"/>

                        <ImageButton
                            android:id="@+id/btnRefreshPill"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@null"
                            android:contentDescription="Atualizar"
                            app:srcCompat="@drawable/ic_refresh"
                            app:tint="@android:color/white" />
                    </LinearLayout>

                    <!-- Chatbot alinhado à direita da linha -->
                    <ImageButton
                        android:id="@+id/btnChatbot"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:background="@null"
                        android:contentDescription="Chatbot"
                        android:src="@drawable/ic_chatbot"
                        app:tint="@color/blue" />
                </RelativeLayout>
            </LinearLayout>

            <!-- ===== CHIP PRETO: EVENTOS + ACESSAR CALENDÁRIO ===== -->
            <RelativeLayout
                android:id="@+id/headerEventos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_preto_arredondado"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eventos:"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvCalendario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Acessar calendário"
                    android:textColor="@color/blue"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <!-- ===== CARTÃO ÚNICO DE EVENTOS (com divisores) ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_section_card"
                android:orientation="vertical">

                <!-- Evento 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lançamento do Livro: A Culpa é das Estrelas"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Data: 25/10/2025 - 15h"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Local: Auditório Principal - UNIFOR"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Descrição: Evento de lançamento do livro com sessão de autógrafos e bate-papo com os autores."
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- divisor -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1F000000"/>

                <!-- Evento 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lançamento do Livro: 1984"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Data: 28/10/2025 - 19h"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Local: Biblioteca Central"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Descrição: Discussão e mesa-redonda sobre a obra de George Orwell."
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout> <!-- /contentContainer -->

    </LinearLayout>
</ScrollView>
